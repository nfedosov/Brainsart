<Window x:Class="AlphaTraining.ProtocolBlockCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlphaTraining"
        mc:Ignorable="d"
        Title="Новый блок" Height="200" Width="260" 
        MaxWidth="260" MaxHeight="200"
        MinWidth="260" MinHeight="200" >
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Название блока">
                <TextBox Name ="tbBlockName"></TextBox>
            </GroupBox>
            <GroupBox Header="Длительность (секунд)">
                <TextBox Name ="tbDuration"></TextBox>
            </GroupBox>
            <GroupBox  Name="gbMessage" Header="Сообщение">
                <TextBox Name ="tbMessage"></TextBox>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="3,3,3,3">
                <Button Name="btnOk" Content="Готово" Click="btnOk_Click"/>
                <Button Name="btnCancel" Content="Отмена" Margin="5, 0, 0, 0" Click="btnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
