<Window x:Class="AlphaTraining.EndOfSessionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlphaTraining"
        mc:Ignorable="d"
        Title="Сеанс завершен" Height="240" Width="500" MinHeight="240" MinWidth="500" MaxHeight="240" MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition></RowDefinition>            
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Сеанс завершен!" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Name="btnResults" Content="Просмотр результатов" Height="35" Width="150" Margin="5, 5, 5, 5" Click="btnResults_Click"></Button>
            <Button Name="btnMainMenu" Content="Главное меню" Height="35" Width="150" Margin="5, 5, 5, 5" Click="btnMainMenu_Click"></Button>
            <Button Name="btnExit" Content="Выход" Height="35" Width="150" Margin="5, 5, 5, 5" Click="btnExit_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
